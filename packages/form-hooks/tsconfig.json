{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noEmit": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "noImplicitThis": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.{ts,tsx}"]
}
